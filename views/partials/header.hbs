<div class="header">
    <ul>
        <li><a href="/">Home</a></li>
        <li><a href="">Articles</a></li>
        <li><a href="/contact">Contact</a></li>
        {{#if user }}
            <li id="name-greeting">Hello, {{user.name}}  <a id="sign-out">Sign out</a></li>
        {{else}}
            <li class="nav-bar-login">
                <a>Login/Sign Up</a>
            </li>
        {{/if}}
    </ul>
</div>

<!--Login/Sign Up pop-up-->

<div class="pop-up-background">
    <div class="pop-up">
        <div class="delete-icon fas fa-times-circle"></div>
        <h1 id="form-header">Log In</h1>
        <div class="form-container">
            <p id="wrong-credentials">The email or password is incorrect please try again.</p>
            <label for="name" id="name-label">Name: </label><input type="text" id="name">
            <label for="email">Email: </label><input id="email" type="text">
            <label for="password">Password: </label><input id="password" type="password">
            <button>Submit</button>
            <p id="form-paragraph">Don't have an account?
            <p id="sign-up-button">Sign Up!</p></p>
        </div>
    </div>
</div>